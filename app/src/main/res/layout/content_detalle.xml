<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetalleActivity"
    tools:showIn="@layout/activity_detalle">


    <LinearLayout
        android:id="@+id/ly_detalle_fijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_detalle_titulo_fijo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="7"
            android:gravity="right"
            android:text="@string/detalle_nCuenta"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detalle_fijo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingStart="15dp"
            android:text="999 99 99"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_detalle_trabajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_detalle_fijo"
        >

        <TextView
            android:id="@+id/tv_detalle_titulo_trabajo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="@string/detalle_tpCuenta"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_weight="7"
            />

        <TextView
            android:id="@+id/tv_detalle_trabajo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:paddingStart="15dp"
            android:text="Ahorros"
            android:gravity="center"
            android:textSize="19sp"
            android:layout_weight="3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_detalle_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_detalle_trabajo"
        >

        <TextView
            android:id="@+id/tv_detalle_titulo_correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="@string/detalle_usaldo"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_weight="7"
            />

        <TextView
            android:id="@+id/tv_detalle_correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingStart="15dp"
            android:text="999 99 99"
            android:textSize="19sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>